{% extends 'base.html.twig' %}

{% block title %}Nos Hotels{% endblock %}

{% block body_name %}hotel{% endblock %}


{% block body %}
    <div class="container">
        <h1 class="text-center">Nos hotels</h1>
        <div class="card-group">
            {% for hotel in hotels %}
                <div class="card mt-3">
                    <div class="card-body">
                        <h5 class="card-title">{{ hotel.name }}</h5>
                        <p class="card-text">{{ hotel.description | raw }}</p>
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        </div>
                    </div>
                    <div class="card-footer">
                        <a href="{{ path('app_hotel', {slug: hotel.slug}) }}" class="btn btn-primary">Voir les suites</a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
